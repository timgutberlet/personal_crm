<div class="flex h-screen overflow-hidden">
  <!-- Sidebar -->
  <aside class="hidden lg:flex lg:flex-col lg:w-64 lg:bg-white lg:border-r">
    <div class="p-4">
      <h2 class="text-xl font-bold">Personal CRM</h2>
    </div>
    <nav class="flex-1 p-4">
      <ul>
        <li class="mb-2">
          <a href="#" class="flex items-center px-4 py-2 text-sm font-medium text-gray-900 bg-gray-100 rounded-md">
            <%= icon('layout-dashboard', class: 'mr-2 h-4 w-4') %>
            Dashboard
          </a>
        </li>
        <li class="mb-2">
          <a href="#" class="flex items-center px-4 py-2 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-100 rounded-md">
            <%= icon('users', class: 'mr-2 h-4 w-4') %>
            Contacts
          </a>
        </li>
        <!-- Add more menu items here -->
      </ul>
    </nav>
  </aside>

  <!-- Main Content -->
  <div class="flex flex-col flex-1 overflow-hidden">
    <!-- Header -->
    <header class="flex items-center h-16 px-4 border-b shrink-0 md:px-6">
      <!-- Add header content here -->
    </header>

    <!-- Main Content Area -->
    <main class="flex-1 overflow-y-auto bg-gray-100 p-4 md:p-6">
      <!-- Summary Cards -->
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-4">
        <!-- Total Contacts Card -->
        <div class="bg-white p-4 rounded-lg shadow">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-sm font-medium text-gray-500">Total Contacts</h3>
            <%= icon('users', class: 'h-4 w-4 text-gray-400') %>
          </div>
          <p class="text-2xl font-bold">1,234</p>
          <p class="text-xs text-gray-500">+20 from last month</p>
        </div>

        <!-- Upcoming Events Card -->
        <div class="bg-white p-4 rounded-lg shadow">
          <div class="flex items-center justify-between mb-2">
            <h3 class="text-sm font-medium text-gray-500">Upcoming Events</h3>
            <%= icon('calendar', class: 'h-4 w-4 text-gray-400') %>
          </div>
          <p class="text-2xl font-bold">8</p>
          <p class="text-xs text-gray-500">Next: Coffee with Sarah (Tomorrow)</p>
        </div>

        <!-- Add more summary cards here -->
      </div>

      <!-- Weekly Calendar and New Contacts Chart -->
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-7 mt-4">
        <!-- Weekly Calendar -->
        <div class="col-span-4 bg-white p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-4">Weekly Calendar</h3>
          <!-- Add calendar content here -->
        </div>

        <!-- New Contacts Chart -->
        <div class="col-span-3 bg-white p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-4">New Contacts</h3>
          <!-- Add chart content here -->
        </div>
      </div>

      <!-- Relationship Strength, Conversation Starters, and Gift Ideas -->
      <div class="grid gap-4 md:grid-cols-2 lg:grid-cols-3 mt-4">
        <!-- Relationship Strength -->
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-4">Relationship Strength</h3>
          <!-- Add relationship strength content here -->
        </div>

        <!-- Conversation Starters -->
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-4">Conversation Starters</h3>
          <!-- Add conversation starters content here -->
        </div>

        <!-- Gift Ideas -->
        <div class="bg-white p-4 rounded-lg shadow">
          <h3 class="text-lg font-semibold mb-4">Gift Ideas</h3>
          <!-- Add gift ideas content here -->
        </div>
      </div>

      <!-- Networking Goals -->
      <div class="bg-white p-4 rounded-lg shadow mt-4">
        <h3 class="text-lg font-semibold mb-4">Networking Goals</h3>
        <!-- Add networking goals content here -->
      </div>
    </main>
  </div>
</div>
