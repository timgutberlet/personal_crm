<div class="flex flex-col min-h-screen">
  <header class="flex items-center justify-between px-6 py-4 bg-white border-b shadow-md">
    <div class="text-2xl font-bold text-blue-600">PersonalCRM</div>
    <nav class="hidden md:flex space-x-4">
      <%= link_to 'Features', '#features', class: 'text-gray-600 hover:text-blue-600 transition-colors duration-300 font-medium' %>
      <%= link_to 'Testimonials', '#testimonials', class: 'text-gray-600 hover:text-blue-600 transition-colors duration-300 font-medium' %>
      <%= link_to 'Pricing', '#pricing', class: 'text-gray-600 hover:text-blue-600 transition-colors duration-300 font-medium' %>
      <%= link_to 'Contact', '#contact', class: 'text-gray-600 hover:text-blue-600 transition-colors duration-300 font-medium' %>
    </nav>
    <div class="flex space-x-4">
      <%= button_to 'App', dashboard_path, method: :get, class: 'btn bg-green-600 text-black hover:bg-green-700 hover:text-white transition duration-300 ease-in-out transform hover:scale-105 px-4 py-2 rounded-lg shadow-md font-semibold' %>
      <%= button_to 'Sign Up', new_user_registration_path, method: :get, class: 'btn bg-blue-600 text-black hover:bg-blue-700 hover:text-white transition duration-300 ease-in-out transform hover:scale-105 px-4 py-2 rounded-lg shadow-md font-semibold' %>
    </div>
  </header>

  <main class="flex-grow">
    <section class="px-6 py-20 text-center bg-gradient-to-r from-blue-500 to-purple-600 text-white">
      <h1 class="text-4xl font-bold mb-4">Manage Your Personal Network Like a Pro</h1>
      <p class="text-xl mb-8">Keep track of your relationships, never miss an important date, and grow your network effortlessly.</p>
      <div class="flex justify-center space-x-4">
        <%= button_to '#', class: 'bg-white text-black hover:bg-gray-100 hover:text-blue-600 flex items-center px-4 py-2 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105 font-semibold' do %>
          Get Started <%= icon('chevron-right', class: 'ml-2 h-4 w-4') %>
        <% end %>
        <%= button_to '#', class: 'bg-transparent border-white text-black hover:bg-white hover:text-blue-600 flex items-center px-4 py-2 rounded-lg shadow-md transition duration-300 ease-in-out transform hover:scale-105 font-semibold' do %>
          Learn More
        <% end %>
      </div>
    </section>

    <section id="features" class="px-6 py-20 bg-gray-100">
      <h2 class="text-3xl font-bold text-center mb-12">Features</h2>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
        <%= render partial: 'feature_card', locals: { icon: 'bar-chart-2', title: 'Analytics', description: 'Get insights on your network growth and engagement.' } %>
        <%= render partial: 'feature_card', locals: { icon: 'users', title: 'Contact Management', description: 'Organize and categorize your contacts efficiently.' } %>
        <%= render partial: 'feature_card', locals: { icon: 'calendar', title: 'Event Tracking', description: 'Never miss a birthday, anniversary, or important date.' } %>
        <%= render partial: 'feature_card', locals: { icon: 'mail', title: 'Communication Log', description: 'Keep track of all your interactions in one place.' } %>
      </div>
    </section>

    <section id="testimonials" class="px-6 py-20">
      <h2 class="text-3xl font-bold text-center mb-12">What Our Users Say</h2>
      <div class="carousel max-w-xl mx-auto">
        <%= render partial: 'testimonial_carousel', locals: { testimonials: @testimonials } %>
      </div>
    </section>

    <section id="pricing" class="px-6 py-20 bg-gray-100">
      <h2 class="text-3xl font-bold text-center mb-12">Simple, Transparent Pricing</h2>
      <div class="max-w-md mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="px-6 py-8 bg-blue-600 text-white text-center">
          <p class="text-2xl font-bold">Pro Plan</p>
          <p class="text-4xl font-bold mt-2">$9.99<span class="text-xl font-normal">/month</span></p>
        </div>
        <ul class="px-6 py-8 space-y-4 text-gray-700">
          <li class="flex items-center">
            <%= icon('chevron-right', class: 'h-5 w-5 text-green-500 mr-2') %> Unlimited Contacts
          </li>
          <li class="flex items-center">
            <%= icon('chevron-right', class: 'h-5 w-5 text-green-500 mr-2') %> Advanced Analytics
          </li>
          <li class="flex items-center">
            <%= icon('chevron-right', class: 'h-5 w-5 text-green-500 mr-2') %> Email Integration
          </li>
          <li class="flex items-center">
            <%= icon('chevron-right', class: 'h-5 w-5 text-green-500 mr-2') %> Priority Support
          </li>
        </ul>
        <div class="px-6 py-8 bg-gray-100 text-center">
          <%= button_to 'Start Your Free Trial', '#', class: 'w-full bg-blue-600 text-black hover:bg-blue-700 hover:text-white transition duration-300 ease-in-out transform hover:scale-105 px-4 py-2 rounded-lg shadow-md font-semibold' %>
        </div>
      </div>
    </section>

    <section id="contact" class="px-6 py-20">
      <h2 class="text-3xl font-bold text-center mb-12">Get in Touch</h2>
      <form class="max-w-md mx-auto space-y-4">
        <%= text_field_tag :name, nil, placeholder: 'Your Name', class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
        <%= email_field_tag :email, nil, placeholder: 'Your Email', class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
        <%= text_area_tag :message, nil, placeholder: 'Your Message', rows: 4, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500' %>
        <%= button_to 'Send Message', '#', class: 'w-full bg-blue-600 text-black hover:bg-blue-700 hover:text-white transition duration-300 ease-in-out transform hover:scale-105 px-4 py-2 rounded-lg shadow-md font-semibold' %>
      </form>
    </section>
  </main>

  <footer class="px-6 py-4 bg-gray-800 text-white text-center">
    <p>&copy; 2023 PersonalCRM. All rights reserved.</p>
  </footer>
</div>
