<% testimonials.each do |testimonial| %>
  <div class="carousel-item">
    <div class="card h-full">
      <div class="card-content p-6 flex flex-col justify-between h-full">
        <div>
          <div class="flex items-center mb-4">
            <div class="avatar h-12 w-12 mr-4">
              <!-- Removed the image tag -->
              <div class="avatar-fallback"><%= testimonial[:name].split(' ').map { |n| n[0] }.join('') %></div>
            </div>
            <div>
              <h3 class="font-semibold"><%= testimonial[:name] %></h3>
              <p class="text-sm text-gray-600"><%= testimonial[:role] %></p>
            </div>
          </div>
          <p class="text-gray-700 mb-4 italic">"<%= testimonial[:quote] %>"</p>
        </div>
        <div class="flex text-yellow-400">
          <%= 5.times.map { icon('star', class: 'h-5 w-5 fill-current') }.join.html_safe %>
        </div>
      </div>
    </div>
  </div>
<% end %>
